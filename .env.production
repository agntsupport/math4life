# Production Environment Variables for Math4Life
# Copy this to .env and update the values for your production environment

# Application
NODE_ENV=production
PORT=4000
FRONTEND_URL=https://math4life.agnt.support

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USER=math4life
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_IN_PRODUCTION
DB_NAME=math4life

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Security - IMPORTANT: Change these in production!
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION_MINIMUM_32_CHARS
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_IN_PRODUCTION_MINIMUM_32_CHARS

# Email Configuration (for password reset, notifications)
EMAIL_FROM=noreply@math4life.agnt.support
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email@gmail.com
EMAIL_SMTP_PASS=your_app_password

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=
ANALYTICS_ID=

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads

# Cache
CACHE_TTL=3600

# Features flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_AI_HINTS=false
MAINTENANCE_MODE=false